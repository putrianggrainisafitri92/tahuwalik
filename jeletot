        // Select stock image
        function selectStockImage(imageUrl, altText) {
            const productId = window.currentImageProductId;
            updateProductImage(productId, imageUrl, altText);
            closeImageSelectionModal();
            alert(`✅ Foto ${getProductName(productId)} berhasil diganti!`);
        }

        // Update product image (unified function)
        function updateProductImage(productId, imageSrc, altText) {
            // Update main product image
            const imgElement = document.getElementById(productId + '-img');
            if (imgElement) {
                imgElement.src = imageSrc;
                imgElement.alt = altText;
                
                // Add effect
                imgElement.style.transform = 'scale(1.05)';
                setTimeout(() => {
                    imgElement.style.transform = 'scale(1)';
                }, 300);
            }
            
            // Update admin preview image
            const adminPreview = document.getElementById(`admin-${productId.replace('-', '')}-preview`);
            if (adminPreview) {
                adminPreview.src = imageSrc;
                adminPreview.alt = altText;
            }
            
            // Store in localStorage for persistence
            localStorage.setItem(`tawalet-${productId}-image`, imageSrc);
        }

        // Set image from URL link
        function setImageFromLink(productId, inputId) {
            const linkInput = document.getElementById(inputId);
            const imageUrl = linkInput.value.trim();
            
            if (!imageUrl) {
                alert('Masukkan link JPG terlebih dahulu!');
                return;
            }
            
            // Validate URL format
            try {
                new URL(imageUrl);
            } catch {
                alert('Format URL tidak valid! Pastikan dimulai dengan https://');
                return;
            }
            
            // Check if it's an image URL
            const imageExtensions = ['.jpg', '.jpeg', '.png', '.webp'];
            const hasImageExtension = imageExtensions.some(ext => 
                imageUrl.toLowerCase().includes(ext)
            );
            
            if (!hasImageExtension) {
                const confirmUse = confirm('Link tidak berakhiran dengan format gambar (.jpg, .png, dll).\n\nTetap gunakan link ini?');
                if (!confirmUse) return;
            }
            
            // Test if image loads successfully
            const testImg = new Image();
            testImg.onload = function() {
                // Update main product image
                const imgElement = document.getElementById(productId + '-img');
                if (imgElement) {
                    imgElement.src = imageUrl;
                    imgElement.alt = `${productId} - Foto dari Link`;
                    
                    // Add effect
                    imgElement.style.transform = 'scale(1.05)';
                    setTimeout(() => {
                        imgElement.style.transform = 'scale(1)';
                    }, 300);
                }
                
                // Update admin preview image
                const adminPreview = document.getElementById(`admin-${productId.replace('-', '')}-preview`);
                if (adminPreview) {
                    adminPreview.src = imageUrl;
                    adminPreview.alt = `${productId} - Admin Preview`;
                }
                
                // Store in localStorage
                localStorage.setItem(`tawalet-${productId}-image`, imageUrl);
                
                // Clear input and show success
                linkInput.value = '';
                alert(`✅ Foto ${getProductName(productId)} berhasil diset dari link!\n\nFoto akan tersimpan dan muncul setiap kali halaman dibuka.`);
            };
            
            testImg.onerror = function() {
                alert('❌ Gagal memuat gambar dari link!\n\nPastikan:\n• Link dapat diakses publik\n• Format gambar didukung\n• Koneksi internet stabil');
            };
            
            testImg.src = imageUrl;
        }

        // Helper function to get product name
        function getProductName(productId) {
            const names = {
                'paket-promo': 'Paket Promo',
                'tahu-walik': 'Tahu Walik',
                'es-teh': 'Es Teh Manis'
            };
            return names[productId] || productId;
        }

        // Helper function to get upload input ID
        function getUploadInputId(productId) {
            const inputIds = {
                'paket-promo': 'paket-upload',
                'tahu-walik': 'tahu-upload',
                'es-teh': 'esteh-upload'
            };
            return inputIds[productId];
        }

        // Load saved images from localStorage
        function loadSavedImages() {
            const productIds = ['paket-promo', 'tahu-walik', 'es-teh'];
            
            productIds.forEach(productId => {
                const savedImage = localStorage.getItem(`tawalet-${productId}-image`);
                if (savedImage) {
                    // Update main product image
                    const imgElement = document.getElementById(productId + '-img');
                    if (imgElement) {
                        imgElement.src = savedImage;
                        imgElement.alt = `${productId} - Foto Custom`;
                    }
                    
                    // Update admin preview image
                    const adminPreview = document.getElementById(`admin-${productId.replace('-', '')}-preview`);
                    if (adminPreview) {
                        adminPreview.src = savedImage;
                        adminPreview.alt = `${productId} - Admin Preview`;
                    }
                }
            });
        }

        // Reset all images to default
        function resetAllImages() {
            if (confirm('Yakin ingin mengembalikan semua foto ke default?\n\nFoto custom yang sudah diupload akan hilang.')) {
                const defaultImages = {
                    'paket-promo': 'https://images.unsplash.com/photo-1565299624946-b28f40a0ca4b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80',
                    'tahu-walik': 'https://images.unsplash.com/photo-1606491956689-2ea866880c84?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80',
                    'es-teh': 'https://images.unsplash.com/photo-1556679343-c7306c1976bc?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80'
                };
                
                Object.keys(defaultImages).forEach(productId => {
                    // Reset main product image
                    const imgElement = document.getElementById(productId + '-img');
                    if (imgElement) {
                        imgElement.src = defaultImages[productId];
                        imgElement.alt = getProductName(productId);
                    }
                    
                    // Reset admin preview image
                    const adminPreview = document.getElementById(`admin-${productId.replace('-', '')}-preview`);
                    if (adminPreview) {
                        adminPreview.src = defaultImages[productId];
                        adminPreview.alt = `${productId} Preview`;
                    }
                    
                    localStorage.removeItem(`tawalet-${productId}-image`);
                });
                
                alert('✅ Semua foto berhasil direset ke default!');
            }
        }

        // Mobile menu functions
        function toggleMobileMenu() {
            const navMenu = document.getElementById('nav-menu');
            const menuIcon = document.getElementById('menu-icon');
            
            navMenu.classList.toggle('active');
            
            // Change icon
            if (navMenu.classList.contains('active')) {
                menuIcon.textContent = '✕';
            } else {
                menuIcon.textContent = '☰';
            }
        }

        function closeMobileMenu() {
            const navMenu = document.getElementById('nav-menu');
            const menuIcon = document.getElementById('menu-icon');
            
            navMenu.classList.remove('active');
            menuIcon.textContent = '☰';
        }

        // Close mobile menu when clicking outside
        document.addEventListener('click', function(event) {
            const navMenu = document.getElementById('nav-menu');
            const menuToggle = document.querySelector('.mobile-menu-toggle');
            const nav = document.querySelector('.nav');
            
            if (!nav.contains(event.target) && navMenu.classList.contains('active')) {
                closeMobileMenu();
            }
        });

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            showMainContent();
            // Load saved custom images
            loadSavedImages();
            // Initialize orders table if admin section is loaded
            setTimeout(() => {
                updateOrdersTable();
                updateDashboardStats();
            }, 100);
        });
    </script>


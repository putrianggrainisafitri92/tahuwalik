                            <p style="font-weight: bold; color: #8b5cf6;">Rp 26.000</p>
                        </div>
                        <div style="color: #8b5cf6; font-size: 20px;">🌟</div>
                    </div>
                `;
            }
        }

        // Select spice level
        function selectSpiceLevel(spiceLevel, extraPrice) {
            const selection = window.currentSpiceSelection;
            const finalPrice = selection.basePrice + extraPrice;
            const fullProductName = `${selection.productName} ${spiceLevel}`;
            
            // Add to appropriate cart/order
            if (selection.orderType === 'cart') {
                const existingItem = cart.find(item => item.name === fullProductName);
                
                if (existingItem) {
                    existingItem.quantity += 1;
                } else {
                    cart.push({ 
                        name: fullProductName, 
                        price: finalPrice, 
                        quantity: 1,
                        spiceLevel: spiceLevel
                    });
                }
                
                updateCartDisplay();
                updateCartBadge();
                
                // Show success message
                alert(`${fullProductName} berhasil ditambahkan ke keranjang!\n\nHarga: Rp ${finalPrice.toLocaleString()}`);
                
            } else if (selection.orderType === 'quick') {
                const existingItem = quickOrder.find(item => item.name === fullProductName);
                
                if (existingItem) {
                    existingItem.quantity += 1;
                } else {
                    quickOrder.push({ 
                        name: fullProductName, 
                        price: finalPrice, 
                        quantity: 1,
                        spiceLevel: spiceLevel
                    });
                }
                
                // Show quick order modal
                showQuickOrderModal();
                
                // Show success message
                alert(`${fullProductName} ditambahkan ke pesanan cepat!\n\nHarga: Rp ${finalPrice.toLocaleString()}\n\nAnda bisa menambah produk lain atau langsung pesan via WhatsApp.`);
            }
            
            closeSpiceLevelModal();
        }

        // Close spice level modal
        function closeSpiceLevelModal() {
            const modal = document.getElementById('spice-level-modal');
            if (modal) {
                modal.style.display = 'none';
            }
        }

        // Show quick order modal
        function showQuickOrderModal() {
            let modal = document.getElementById('quick-order-modal');
            if (!modal) {
                // Create modal if it doesn't exist
                modal = document.createElement('div');
                modal.id = 'quick-order-modal';
                modal.innerHTML = `
                    <div style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 1000; display: flex; align-items: center; justify-content: center;">
                        <div style="background: white; border-radius: 12px; padding: 24px; max-width: 500px; width: 90%; max-height: 80vh; overflow-y: auto;">
                            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                                <h3 style="font-size: 24px; color: var(--burgundy);">🛒 Pesanan Cepat</h3>
                                <button onclick="closeQuickOrderModal()" style="background: none; border: none; font-size: 24px; cursor: pointer;">×</button>
                            </div>
                            <div id="quick-order-items" style="margin-bottom: 20px;"></div>
                            <div style="border-top: 2px solid #eee; padding-top: 20px;">
                                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                                    <span style="font-size: 18px; font-weight: bold;">Total:</span>
                                    <span id="quick-order-total" style="font-size: 20px; font-weight: bold; color: var(--burgundy);">Rp 0</span>
                                </div>
                                <div style="display: flex; gap: 12px;">
                                    <button onclick="continueShoppingQuick()" class="btn" style="flex: 1;">
                                        Tambah Produk Lain
                                    </button>
                                    <button onclick="checkoutQuickOrder()" class="btn btn-primary" style="flex: 1;">
                                        Pesan via WhatsApp
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                document.body.appendChild(modal);
            }
            
            updateQuickOrderDisplay();
            modal.style.display = 'flex';
        }

        // Update quick order display
        function updateQuickOrderDisplay() {
            const quickOrderItems = document.getElementById('quick-order-items');
            const quickOrderTotal = document.getElementById('quick-order-total');
            
            if (quickOrder.length === 0) {
                quickOrderItems.innerHTML = '<p style="text-align: center; color: var(--muted);">Belum ada produk dipilih</p>';
                quickOrderTotal.textContent = 'Rp 0';
                return;
            }
            
            let total = 0;
            quickOrderItems.innerHTML = '';
            
            quickOrder.forEach((item, index) => {
                const itemTotal = item.price * item.quantity;
                total += itemTotal;
                
                const itemDiv = document.createElement('div');
                itemDiv.className = 'cart-item';
                itemDiv.innerHTML = `
                    <div>
                        <h4 style="font-weight: 600; margin-bottom: 4px;">${item.name}</h4>
                        <p style="color: var(--muted); font-size: 14px;">Rp ${item.price.toLocaleString()} x ${item.quantity}</p>
                    </div>
                    <div class="cart-controls">
                        <button onclick="updateQuickQuantity(${index}, -1)" class="qty-btn minus">-</button>
                        <span style="font-weight: bold; min-width: 20px; text-align: center;">${item.quantity}</span>
                        <button onclick="updateQuickQuantity(${index}, 1)" class="qty-btn plus">+</button>
                        <button onclick="removeFromQuickOrder(${index})" class="btn" style="background: #6b7280; color: white; font-size: 12px; padding: 6px 12px; margin-left: 8px;">Hapus</button>
                    </div>
                `;
                quickOrderItems.appendChild(itemDiv);
            });
            
            quickOrderTotal.textContent = `Rp ${total.toLocaleString()}`;
        }

        // Update quick order quantity
        function updateQuickQuantity(index, change) {
            quickOrder[index].quantity += change;
            
            if (quickOrder[index].quantity <= 0) {
                quickOrder.splice(index, 1);
            }
            
            updateQuickOrderDisplay();
        }

        // Remove from quick order
        function removeFromQuickOrder(index) {
            quickOrder.splice(index, 1);
            updateQuickOrderDisplay();
        }

        // Close quick order modal
        function closeQuickOrderModal() {
            const modal = document.getElementById('quick-order-modal');
            if (modal) {
                modal.style.display = 'none';
            }
        }

        // Continue shopping from quick order
        function continueShoppingQuick() {
            closeQuickOrderModal();
            showMainContent();
            scrollToSection('produk');
        }

        // Checkout quick order
        function checkoutQuickOrder() {
            if (quickOrder.length === 0) return;
            
            // Show customer info modal for quick order
            closeQuickOrderModal();
            showCustomerInfoModal(quickOrder, 'quick');
        }

        // Checkout function
        function checkout() {
            if (cart.length === 0) return;
            
            // Show customer info modal first
            showCustomerInfoModal(cart, 'cart');
        }

        // Show customer info modal
        function showCustomerInfoModal(orderItems, orderType) {
            let modal = document.getElementById('customer-info-modal');
            if (!modal) {
                // Create modal if it doesn't exist
                modal = document.createElement('div');
                modal.id = 'customer-info-modal';
                modal.innerHTML = `
                    <div style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 1000; display: flex; align-items: center; justify-content: center;">
                        <div style="background: white; border-radius: 12px; padding: 24px; max-width: 500px; width: 90%; max-height: 80vh; overflow-y: auto;">
                            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                                <h3 style="font-size: 24px; color: var(--burgundy);">📝 Informasi Pelanggan</h3>
                                <button onclick="closeCustomerInfoModal()" style="background: none; border: none; font-size: 24px; cursor: pointer;">×</button>
                            </div>
                            <form id="customer-info-form" onsubmit="processOrder(event)">
                                <div class="form-group">
                                    <label class="form-label">Nama Lengkap *</label>
                                    <input type="text" id="customer-name" required class="form-input" placeholder="Masukkan nama lengkap">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Nomor WhatsApp *</label>
                                    <input type="tel" id="customer-phone" required class="form-input" placeholder="08xxxxxxxxxx">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Alamat Pengiriman</label>
                                    <textarea id="customer-address" class="form-input" rows="3" placeholder="Alamat lengkap (opsional)"></textarea>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Catatan Pesanan</label>
                                    <textarea id="order-notes" class="form-input" rows="2" placeholder="Catatan khusus (opsional)"></textarea>
                                </div>
                                <div style="border-top: 2px solid #eee; padding-top: 20px; margin-top: 20px;">
                                    <div id="order-summary-modal" style="margin-bottom: 20px;"></div>
                                    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                                        <span style="font-size: 18px; font-weight: bold;">Total:</span>
                                        <span id="modal-order-total" style="font-size: 20px; font-weight: bold; color: var(--burgundy);">Rp 0</span>
                                    </div>
                                    <button type="submit" class="btn btn-primary" style="width: 100%; font-size: 16px;">
                                        🛒 Konfirmasi Pesanan
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                `;
                document.body.appendChild(modal);
            }
            
            // Store current order data
            window.currentOrderData = { items: orderItems, type: orderType };
            
            // Update order summary in modal
            updateOrderSummaryModal(orderItems);
            modal.style.display = 'flex';
        }

        // Update order summary in modal
        function updateOrderSummaryModal(orderItems) {
            const summaryDiv = document.getElementById('order-summary-modal');
            const totalSpan = document.getElementById('modal-order-total');
            
            let total = 0;
            let summaryHTML = '<h4 style="margin-bottom: 12px; color: var(--burgundy);">Ringkasan Pesanan:</h4>';
            
            orderItems.forEach(item => {
                const itemTotal = item.price * item.quantity;
                total += itemTotal;
                summaryHTML += `
                    <div style="display: flex; justify-content: space-between; align-items: center; padding: 8px 0; border-bottom: 1px solid #eee;">
                        <div>
                            <span style="font-weight: 600;">${item.name}</span>
                            <span style="color: var(--muted); font-size: 14px;"> x${item.quantity}</span>
                        </div>
                        <span style="font-weight: 600;">Rp ${itemTotal.toLocaleString()}</span>
                    </div>
                `;
            });
            
            summaryDiv.innerHTML = summaryHTML;
            totalSpan.textContent = `Rp ${total.toLocaleString()}`;
        }

        // Process order
        function processOrder(event) {
            event.preventDefault();
            
            const customerName = document.getElementById('customer-name').value;
            const customerPhone = document.getElementById('customer-phone').value;
            const customerAddress = document.getElementById('customer-address').value;
            const orderNotes = document.getElementById('order-notes').value;
            
            const orderData = window.currentOrderData;
            const total = orderData.items.reduce((sum, item) => sum + (item.price * item.quantity), 0);
            
            // Create new order for admin system
            const newOrder = {
                id: `#${orderCounter.toString().padStart(3, '0')}`,
                customer: customerName,
                items: orderData.items.map(item => `${item.quantity}x ${item.name}`).join(', '),
                total: total,
                status: 'pending',
                timestamp: new Date(),
                phone: customerPhone,
                address: customerAddress,
                notes: orderNotes,
                itemDetails: orderData.items
            };
            
            // Add to orders array
            orders.unshift(newOrder);
            orderCounter++;
            
            // Update admin dashboard if visible
            updateOrdersTable();
            updateDashboardStats();
            
            // Create order summary for WhatsApp
            let orderText = "🌶️ *PESANAN TAWALET* 🌶️\n\n";
            orderText += `📋 *ID Pesanan:* ${newOrder.id}\n`;
            orderText += `👤 *Nama:* ${customerName}\n`;
            orderText += `📞 *WhatsApp:* ${customerPhone}\n`;
            if (customerAddress) {
                orderText += `📍 *Alamat:* ${customerAddress}\n`;
            }
            orderText += `\n*DETAIL PESANAN:*\n`;
            
            orderData.items.forEach(item => {
                orderText += `• ${item.name}\n  Qty: ${item.quantity} x Rp ${item.price.toLocaleString()} = Rp ${(item.price * item.quantity).toLocaleString()}\n\n`;
            });
            
            orderText += `*TOTAL: Rp ${total.toLocaleString()}*\n\n`;
            
            if (orderNotes) {
                orderText += `📝 *Catatan:* ${orderNotes}\n\n`;
            }
            
            orderText += "Mohon konfirmasi pesanan ini. Terima kasih! 🙏";
            
            // Encode for WhatsApp URL
            const encodedText = encodeURIComponent(orderText);
            const whatsappUrl = `https://wa.me/6289505755222?text=${encodedText}`;
            
            // Open WhatsApp in new tab
            window.open(whatsappUrl, '_blank', 'noopener,noreferrer');
            
            // Show confirmation message
            alert(`Pesanan ${newOrder.id} berhasil dibuat!\n\nTotal: Rp ${total.toLocaleString()}\n\nPesanan Anda akan dikirim ke WhatsApp dan otomatis masuk ke sistem admin untuk diproses.`);
            
            // Clear cart/quick order and close modal
            if (orderData.type === 'cart') {
                cart = [];
                updateCartDisplay();
                updateCartBadge();
            } else {
                quickOrder = [];
                closeQuickOrderModal();
            }
            
            closeCustomerInfoModal();
        }

        // Close customer info modal
        function closeCustomerInfoModal() {
            const modal = document.getElementById('customer-info-modal');
            if (modal) {
                modal.style.display = 'none';
                // Reset form
                const form = document.getElementById('customer-info-form');
                if (form) form.reset();
            }
        }

        // Send message function
        function sendMessage(event) {
            event.preventDefault();
            
            const nama = document.getElementById('contact-name').value;
            const email = document.getElementById('contact-email').value;
            const phone = document.getElementById('contact-phone').value;
            const subject = document.getElementById('contact-subject').value;
            const pesan = document.getElementById('contact-message').value;
            
            // Create message for WhatsApp
            let messageText = "📩 *PESAN DARI WEBSITE TAWALET* 📩\n\n";
            messageText += `👤 *Nama:* ${nama}\n`;
            messageText += `📧 *Email:* ${email}\n`;
            
            if (phone) {
                messageText += `📞 *WhatsApp:* ${phone}\n`;
            }
            
            messageText += `📋 *Subjek:* ${subject}\n\n`;
            messageText += `💬 *Pesan:*\n${pesan}\n\n`;
            messageText += "Mohon dibalas ya. Terima kasih! 🙏";
            
            // Encode for WhatsApp URL
            const encodedText = encodeURIComponent(messageText);
            const whatsappUrl = `https://wa.me/6289505755222?text=${encodedText}`;
            
            // Open WhatsApp in new tab
            window.open(whatsappUrl, '_blank', 'noopener,noreferrer');
            
            // Show confirmation and reset form
            alert(`Pesan "${subject}" berhasil disiapkan!\n\nAnda akan diarahkan ke WhatsApp untuk mengirim pesan.`);
            document.getElementById('contact-form').reset();
        }

        // Admin login function
        function adminLogin(event) {
            event.preventDefault();
            
            const username = document.getElementById('admin-username').value;
            const password = document.getElementById('admin-password').value;
            
            // Simple demo authentication
            if (username === 'admin' && password === 'admin123') {
                document.getElementById('admin').classList.add('hidden');
                document.getElementById('admin-dashboard').classList.remove('hidden');
                alert('Login berhasil! Selamat datang di Admin Dashboard.');
            } else {
                alert('Username atau password salah!');
            }
        }

        // Admin logout function
        function adminLogout() {
            document.getElementById('admin-dashboard').classList.add('hidden');
            document.getElementById('admin').classList.remove('hidden');
            document.getElementById('admin-username').value = '';
            document.getElementById('admin-password').value = '';
            alert('Logout berhasil!');
        }

        // Update stock function
        function updateStock(event) {
            event.preventDefault();
            alert('Stok berhasil diupdate!');
            event.target.reset();
        }

        // Initialize sales chart
        function initSalesChart() {
            const ctx = document.getElementById('salesChart');
            if (!ctx) return;
            
            // Destroy existing chart if it exists
            if (salesChart) {
                salesChart.destroy();
            }
            
            salesChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['Sen', 'Sel', 'Rab', 'Kam', 'Jum', 'Sab', 'Min'],
                    datasets: [{
                        label: 'Penjualan (Rp)',
                        data: [650000, 590000, 800000, 810000, 560000, 950000, 870000],
                        borderColor: '#dc2626',
                        backgroundColor: 'rgba(220, 38, 38, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        title: {
                            display: true,
                            text: 'Grafik Penjualan Harian'
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return 'Rp ' + value.toLocaleString();
                                }
                            }
                        }
                    }
                }
            });
        }

        // Update sales chart based on filter
        function updateSalesChart() {
            const filter = document.getElementById('sales-filter').value;
            
            if (!salesChart) return;
            
            let labels, data, title;
            
            switch(filter) {
                case 'harian':
                    labels = ['Sen', 'Sel', 'Rab', 'Kam', 'Jum', 'Sab', 'Min'];
                    data = [650000, 590000, 800000, 810000, 560000, 950000, 870000];
                    title = 'Grafik Penjualan Harian';
                    break;
                case 'mingguan':
                    labels = ['Minggu 1', 'Minggu 2', 'Minggu 3', 'Minggu 4'];
                    data = [4500000, 5200000, 4800000, 5800000];
                    title = 'Grafik Penjualan Mingguan';
                    break;
                case 'bulanan':
                    labels = ['Jan', 'Feb', 'Mar', 'Apr', 'Mei', 'Jun'];
                    data = [18500000, 22000000, 19500000, 25000000, 23500000, 27000000];
                    title = 'Grafik Penjualan Bulanan';
                    break;
                case 'tahunan':
                    labels = ['2021', '2022', '2023', '2024'];
                    data = [180000000, 220000000, 280000000, 320000000];
                    title = 'Grafik Penjualan Tahunan';
                    break;
            }
            
            salesChart.data.labels = labels;
            salesChart.data.datasets[0].data = data;
            salesChart.options.plugins.title.text = title;
            salesChart.update();
        }

        // Update orders table
        function updateOrdersTable() {
            const tbody = document.getElementById('orders-table-body');
            if (!tbody) return;
            
            tbody.innerHTML = '';
            
            orders.forEach(order => {
                const row = document.createElement('tr');
                
                let statusBadge = '';
                let actionButton = '';
                
                switch(order.status) {
                    case 'pending':
                        statusBadge = '<span class="status-badge status-pending">Pending</span>';
                        actionButton = `<button onclick="updateOrderStatus('${order.id}', 'processing')" class="btn" style="background: #3b82f6; color: white; font-size: 12px; padding: 6px 12px;">Proses</button>`;
                        break;
                    case 'processing':
                        statusBadge = '<span class="status-badge status-processing">Diproses</span>';
                        actionButton = `<button onclick="updateOrderStatus('${order.id}', 'completed')" class="btn" style="background: #10b981; color: white; font-size: 12px; padding: 6px 12px;">Selesai</button>`;
                        break;
                    case 'completed':
                        statusBadge = '<span class="status-badge status-completed">Selesai</span>';
                        actionButton = '<span style="color: #10b981; font-size: 12px;">✓ Selesai</span>';
                        break;
                }
                
                row.innerHTML = `
                    <td>${order.id}</td>
                    <td>
                        <div>
                            <div style="font-weight: 600;">${order.customer}</div>
                            <div style="font-size: 12px; color: var(--muted);">${order.phone}</div>
                        </div>
                    </td>
                    <td>
                        <div style="font-size: 14px;">${order.items}</div>
                        ${order.notes ? `<div style="font-size: 12px; color: var(--muted); font-style: italic;">Catatan: ${order.notes}</div>` : ''}
                    </td>
                    <td style="font-weight: 600;">Rp ${order.total.toLocaleString()}</td>
                    <td>${statusBadge}</td>
                    <td>
                        <div style="display: flex; gap: 4px; flex-direction: column;">
                            ${actionButton}
                            <button onclick="viewOrderDetail('${order.id}')" class="btn" style="background: #6b7280; color: white; font-size: 10px; padding: 4px 8px;">Detail</button>
                        </div>
                    </td>
                `;
                
                tbody.appendChild(row);
            });
        }

        // Update order status
        function updateOrderStatus(orderId, newStatus) {
            const order = orders.find(o => o.id === orderId);
            if (order) {
                order.status = newStatus;
                updateOrdersTable();
                updateDashboardStats();
                
                let statusText = '';
                switch(newStatus) {
                    case 'processing': statusText = 'diproses'; break;
                    case 'completed': statusText = 'selesai'; break;
                }
                
                alert(`Pesanan ${orderId} berhasil diubah ke status ${statusText}!`);
            }
        }

        // View order detail
        function viewOrderDetail(orderId) {
            const order = orders.find(o => o.id === orderId);
            if (!order) return;
            
            let detailText = `📋 DETAIL PESANAN ${order.id}\n\n`;
            detailText += `👤 Pelanggan: ${order.customer}\n`;
            detailText += `📞 WhatsApp: ${order.phone}\n`;
            if (order.address) {
                detailText += `📍 Alamat: ${order.address}\n`;
            }
            detailText += `📅 Waktu: ${order.timestamp.toLocaleString('id-ID')}\n`;
            detailText += `💰 Total: Rp ${order.total.toLocaleString()}\n`;
            detailText += `📊 Status: ${order.status}\n\n`;
            
            if (order.itemDetails) {
                detailText += `📦 DETAIL ITEM:\n`;
                order.itemDetails.forEach(item => {
                    detailText += `• ${item.name} x${item.quantity} = Rp ${(item.price * item.quantity).toLocaleString()}\n`;
                });
            } else {
                detailText += `📦 Item: ${order.items}\n`;
            }
            
            if (order.notes) {
                detailText += `\n📝 Catatan: ${order.notes}`;
            }
            
            alert(detailText);
        }

        // Update dashboard stats
        function updateDashboardStats() {
            // Calculate today's stats
            const today = new Date();
            const todayOrders = orders.filter(order => {
                const orderDate = new Date(order.timestamp);
                return orderDate.toDateString() === today.toDateString();
            });
            
            const todayRevenue = todayOrders.reduce((sum, order) => sum + order.total, 0);
            const completedOrders = todayOrders.filter(order => order.status === 'completed').length;
            
            // Update stats if elements exist
            const statsElements = {
                totalOrders: document.querySelector('.stat-card:nth-child(1) .stat-value'),
                revenue: document.querySelector('.stat-card:nth-child(2) .stat-value'),
                tawalet: document.querySelector('.stat-card:nth-child(3) .stat-value'),
                drinks: document.querySelector('.stat-card:nth-child(4) .stat-value')
            };
            
            if (statsElements.totalOrders) {
                statsElements.totalOrders.textContent = todayOrders.length;
            }
            if (statsElements.revenue) {
                statsElements.revenue.textContent = `Rp ${Math.floor(todayRevenue / 1000)}K`;
            }
        }

        // Upload product image function
        function uploadProductImage(input, productId) {
            const file = input.files[0];
            if (!file) return;
            
            // Validate file type
            const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/webp'];
            if (!allowedTypes.includes(file.type)) {
                alert('Format file tidak didukung! Gunakan JPG, PNG, atau WebP.');
                return;
            }
            
            // Validate file size (5MB max)
            if (file.size > 5 * 1024 * 1024) {
                alert('Ukuran file terlalu besar! Maksimal 5MB.');
                return;
            }
            
            // Create FileReader to convert to base64
            const reader = new FileReader();
            reader.onload = function(e) {
                // Update main product image
                const imgElement = document.getElementById(productId + '-img');
                if (imgElement) {
                    imgElement.src = e.target.result;
                    imgElement.alt = `${productId} - Foto Custom`;
                    
                    // Add upload effect
                    imgElement.style.transform = 'scale(1.05)';
                    setTimeout(() => {
                        imgElement.style.transform = 'scale(1)';
                    }, 300);
                }
                
                // Update admin preview image
                const adminPreview = document.getElementById(`admin-${productId.replace('-', '')}-preview`);
                if (adminPreview) {
                    adminPreview.src = e.target.result;
                    adminPreview.alt = `${productId} - Admin Preview`;
                }
                
                // Store in localStorage for persistence
                localStorage.setItem(`tawalet-${productId}-image`, e.target.result);
                
                // Show success message
                alert(`✅ Foto ${getProductName(productId)} berhasil diupload!\n\nFoto akan tersimpan dan muncul setiap kali halaman dibuka.`);
            };
            reader.readAsDataURL(file);
            
            // Reset input
            input.value = '';
        }

        // Change product image via button
        function changeProductImage(productId) {
            // Show image selection modal
            showImageSelectionModal(productId);
        }

        // Show image selection modal
        function showImageSelectionModal(productId) {
            let modal = document.getElementById('image-selection-modal');
            if (!modal) {
                // Create modal if it doesn't exist
                modal = document.createElement('div');
                modal.id = 'image-selection-modal';
                modal.innerHTML = `
                    <div style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 1000; display: flex; align-items: center; justify-content: center;">
                        <div style="background: white; border-radius: 12px; padding: 24px; max-width: 600px; width: 90%; max-height: 80vh; overflow-y: auto;">
                            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                                <h3 id="image-modal-title" style="font-size: 24px; color: var(--burgundy);">📷 Ganti Foto Produk</h3>
                                <button onclick="closeImageSelectionModal()" style="background: none; border: none; font-size: 24px; cursor: pointer;">×</button>
                            </div>
                            
                            <!-- Upload from device -->
                            <div style="background: linear-gradient(135deg, #fef3c7, #fde68a); border: 2px dashed var(--yellow); border-radius: 12px; padding: 20px; margin-bottom: 20px; text-align: center;">
                                <h4 style="color: var(--burgundy); margin-bottom: 15px;">📱 Upload dari Perangkat</h4>
                                <input type="file" id="modal-file-input" accept="image/*" style="display: none;" onchange="handleModalFileUpload(this)">
                                <button onclick="document.getElementById('modal-file-input').click()" class="btn btn-primary" style="margin-bottom: 10px;">
                                    📷 Pilih Foto dari Galeri
                                </button>
                                <p style="font-size: 12px; color: var(--muted);">Format: JPG, PNG, WebP. Maksimal 5MB</p>
                            </div>
                            
                            <!-- URL input -->
                            <div style="background: #f8f9fa; border-radius: 12px; padding: 20px; margin-bottom: 20px;">
                                <h4 style="color: var(--burgundy); margin-bottom: 15px;">🔗 Atau Gunakan Link Gambar</h4>
                                <div style="display: flex; gap: 8px; margin-bottom: 10px;">
                                    <input type="url" id="modal-url-input" class="form-input" placeholder="https://example.com/gambar.jpg" style="flex: 1;">
                                    <button onclick="handleModalUrlInput()" class="btn">Set Foto</button>
                                </div>
                                <p style="font-size: 12px; color: var(--muted);">Gunakan link gambar dari Google Drive, Dropbox, atau hosting lainnya</p>
                            </div>
                            
                            <!-- Alternative stock images -->
                            <div style="background: #f8f9fa; border-radius: 12px; padding: 20px;">
                                <h4 style="color: var(--burgundy); margin-bottom: 15px;">🖼️ Atau Pilih Foto Alternatif</h4>
                                <div id="stock-images-container" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(120px, 1fr)); gap: 12px;">
                                    <!-- Stock images will be populated by JavaScript -->
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                document.body.appendChild(modal);
            }
            
            // Store current product ID
            window.currentImageProductId = productId;
            
            // Update modal title
            document.getElementById('image-modal-title').textContent = `📷 Ganti Foto ${getProductName(productId)}`;
            
            // Populate stock images
            populateStockImages(productId);
            
            modal.style.display = 'flex';
        }

        // Close image selection modal
        function closeImageSelectionModal() {
            const modal = document.getElementById('image-selection-modal');
            if (modal) {
                modal.style.display = 'none';
                // Reset inputs
                document.getElementById('modal-file-input').value = '';
                document.getElementById('modal-url-input').value = '';
            }
        }

        // Handle file upload from modal
        function handleModalFileUpload(input) {
            const file = input.files[0];
            if (!file) return;
            
            const productId = window.currentImageProductId;
            
            // Validate file type
            const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/webp'];
            if (!allowedTypes.includes(file.type)) {
                alert('Format file tidak didukung! Gunakan JPG, PNG, atau WebP.');
                return;
            }
            
            // Validate file size (5MB max)
            if (file.size > 5 * 1024 * 1024) {
                alert('Ukuran file terlalu besar! Maksimal 5MB.');
                return;
            }
            
            // Create FileReader to convert to base64
            const reader = new FileReader();
            reader.onload = function(e) {
                updateProductImage(productId, e.target.result, `${getProductName(productId)} - Foto Custom`);
                closeImageSelectionModal();
                alert(`✅ Foto ${getProductName(productId)} berhasil diupload!`);
            };
            reader.readAsDataURL(file);
        }

        // Handle URL input from modal
        function handleModalUrlInput() {
            const urlInput = document.getElementById('modal-url-input');
            const imageUrl = urlInput.value.trim();
            const productId = window.currentImageProductId;
            
            if (!imageUrl) {
                alert('Masukkan link gambar terlebih dahulu!');
                return;
            }
            
            // Validate URL format
            try {
                new URL(imageUrl);
            } catch {
                alert('Format URL tidak valid! Pastikan dimulai dengan https://');
                return;
            }
            
            // Test if image loads successfully
            const testImg = new Image();
            testImg.onload = function() {
                updateProductImage(productId, imageUrl, `${getProductName(productId)} - Foto dari Link`);
                closeImageSelectionModal();
                alert(`✅ Foto ${getProductName(productId)} berhasil diset dari link!`);
            };
            
            testImg.onerror = function() {
                alert('❌ Gagal memuat gambar dari link!\n\nPastikan:\n• Link dapat diakses publik\n• Format gambar didukung\n• Koneksi internet stabil');
            };
            
            testImg.src = imageUrl;
        }


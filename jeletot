    <script>
        // Global variables
        let cart = [];
        let currentSection = 'beranda';
        let currentAdminSection = 'dashboard';
        let salesChart = null;
        let orders = [
            {
                id: '#001',
                customer: 'Budi Santoso',
                items: '2x TAWALET Original, 1x Es Teh',
                total: 38000,
                status: 'processing',
                timestamp: new Date(Date.now() - 2 * 60 * 60 * 1000), // 2 hours ago
                phone: '081234567890'
            },
            {
                id: '#002',
                customer: 'Sari Dewi',
                items: '1x Paket Combo',
                total: 20000,
                status: 'pending',
                timestamp: new Date(Date.now() - 1 * 60 * 60 * 1000), // 1 hour ago
                phone: '081987654321'
            }
        ];
        let orderCounter = 3;

        // Scroll to section function
        function scrollToSection(sectionId) {
            const element = document.getElementById(sectionId);
            if (element) {
                element.scrollIntoView({ 
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        }

        // Show section function (for cart, contact, admin)
        function showSection(section) {
            // Hide main content sections
            document.getElementById('hero').style.display = 'none';
            document.querySelector('.container').style.display = 'none';
            document.getElementById('tentang').style.display = 'none';
            document.getElementById('produk').style.display = 'none';
            
            // Hide all other sections
            document.querySelectorAll('.section').forEach(s => s.classList.add('hidden'));
            
            // Show selected section
            document.getElementById(section).classList.remove('hidden');
            document.getElementById(section).classList.add('fade-in');
            
            currentSection = section;
        }

        // Show main content function
        function showMainContent() {
            // Show main content sections
            document.getElementById('hero').style.display = 'block';
            document.querySelector('.container').style.display = 'block';
            document.getElementById('tentang').style.display = 'block';
            document.getElementById('produk').style.display = 'block';
            
            // Hide other sections
            document.querySelectorAll('.section').forEach(s => s.classList.add('hidden'));
        }

        // Show admin section function
        function showAdminSection(section) {
            // Hide all admin sections
            document.querySelectorAll('.admin-section').forEach(s => s.classList.add('hidden'));
            
            // Show selected admin section
            document.getElementById(`admin-${section}-content`).classList.remove('hidden');
            
            // Update active nav item
            document.querySelectorAll('.admin-nav-item').forEach(item => {
                item.classList.remove('bg-red-50', 'text-red-600');
            });
            event.target.classList.add('bg-red-50', 'text-red-600');
            
            currentAdminSection = section;
            
            // Initialize chart if showing sales section
            if (section === 'penjualan') {
                setTimeout(() => initSalesChart(), 100);
            }
        }

        // Add to cart function
        function addToCart(name, price) {
            // Check if it's Tahu Walik or Paket Promo product - show spice level selection
            if (name === 'Tahu Walik' || name === 'Paket Promo') {
                showSpiceLevelModal(name, price, 'cart');
                return;
            }
            
            const existingItem = cart.find(item => item.name === name);
            
            if (existingItem) {
                existingItem.quantity += 1;
            } else {
                cart.push({ name, price, quantity: 1 });
            }
            
            updateCartDisplay();
            updateCartBadge();
            
            // Show success message
            alert(`${name} berhasil ditambahkan ke keranjang!`);
        }

        // Update cart display
        function updateCartDisplay() {
            const cartItems = document.getElementById('cart-items');
            const cartTotal = document.getElementById('cart-total');
            const checkoutBtn = document.getElementById('checkout-btn');
            
            if (cart.length === 0) {
                cartItems.innerHTML = '<p style="text-align: center; color: var(--muted);">Keranjang masih kosong</p>';
                cartTotal.textContent = 'Rp 0';
                checkoutBtn.disabled = true;
                return;
            }
            
            let total = 0;
            cartItems.innerHTML = '';
            
            cart.forEach((item, index) => {
                const itemTotal = item.price * item.quantity;
                total += itemTotal;
                
                const itemDiv = document.createElement('div');
                itemDiv.className = 'cart-item';
                itemDiv.innerHTML = `
                    <div>
                        <h4 style="font-weight: 600; margin-bottom: 4px;">${item.name}</h4>
                        <p style="color: var(--muted); font-size: 14px;">Rp ${item.price.toLocaleString()} x ${item.quantity}</p>
                    </div>
                    <div class="cart-controls">
                        <button onclick="updateQuantity(${index}, -1)" class="qty-btn minus">-</button>
                        <span style="font-weight: bold; min-width: 20px; text-align: center;">${item.quantity}</span>
                        <button onclick="updateQuantity(${index}, 1)" class="qty-btn plus">+</button>
                        <button onclick="removeFromCart(${index})" class="btn" style="background: #6b7280; color: white; font-size: 12px; padding: 6px 12px; margin-left: 8px;">Hapus</button>
                    </div>
                `;
                cartItems.appendChild(itemDiv);
            });
            
            cartTotal.textContent = `Rp ${total.toLocaleString()}`;
            checkoutBtn.disabled = false;
        }

        // Update quantity
        function updateQuantity(index, change) {
            cart[index].quantity += change;
            
            if (cart[index].quantity <= 0) {
                cart.splice(index, 1);
            }
            
            updateCartDisplay();
            updateCartBadge();
        }

        // Remove from cart
        function removeFromCart(index) {
            cart.splice(index, 1);
            updateCartDisplay();
            updateCartBadge();
        }

        // Update cart badge
        function updateCartBadge() {
            const badge = document.getElementById('cart-badge');
            const totalItems = cart.reduce((sum, item) => sum + item.quantity, 0);
            
            if (totalItems > 0) {
                badge.textContent = totalItems;
                badge.classList.remove('hidden');
                badge.classList.add('cart-count');
            } else {
                badge.classList.add('hidden');
            }
        }

        // Global variable for quick order
        let quickOrder = [];

        // Buy now function - adds to quick order
        function buyNow(name, price) {
            // Check if it's Tahu Walik or Paket Promo product - show spice level selection
            if (name === 'Tahu Walik' || name === 'Paket Promo') {
                showSpiceLevelModal(name, price, 'quick');
                return;
            }
            
            const existingItem = quickOrder.find(item => item.name === name);
            
            if (existingItem) {
                existingItem.quantity += 1;
            } else {
                quickOrder.push({ name, price, quantity: 1 });
            }
            
            // Show quick order modal
            showQuickOrderModal();
            
            // Show success message
            alert(`${name} ditambahkan ke pesanan cepat!\n\nAnda bisa menambah produk lain atau langsung pesan via WhatsApp.`);
        }

        // Show spice level selection modal
        function showSpiceLevelModal(productName, basePrice, orderType) {
            let modal = document.getElementById('spice-level-modal');
            if (!modal) {
                // Create modal if it doesn't exist
                modal = document.createElement('div');
                modal.id = 'spice-level-modal';
                modal.innerHTML = `
                    <div style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 1000; display: flex; align-items: center; justify-content: center;">
                        <div style="background: white; border-radius: 12px; padding: 24px; max-width: 500px; width: 90%; max-height: 80vh; overflow-y: auto;">
                            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                                <h3 id="modal-title" style="font-size: 24px; color: var(--burgundy);">🌶️ Pilih Level Kepedasan</h3>
                                <button onclick="closeSpiceLevelModal()" style="background: none; border: none; font-size: 24px; cursor: pointer;">×</button>
                            </div>
                            <p id="modal-description" style="text-align: center; color: var(--muted); margin-bottom: 25px;">
                                Pilih level kepedasan TAWALET sesuai selera Anda!
                            </p>
                            <div id="spice-options-container" style="display: flex; flex-direction: column; gap: 15px;">
                                <!-- Options will be populated by JavaScript based on product type -->
                            </div>
                            <div style="text-align: center; margin-top: 20px;">
                                <p id="modal-tips" style="font-size: 12px; color: var(--muted);">
                                    💡 Tips: Mulai dari Original jika baru pertama kali mencoba!
                                </p>
                            </div>
                        </div>
                    </div>
                `;
                document.body.appendChild(modal);
                
                // Add hover effects
                const style = document.createElement('style');
                style.textContent = `
                    .spice-option:hover {
                        border-color: var(--yellow) !important;
                        background: var(--pink) !important;
                        transform: translateY(-2px);
                        box-shadow: 0 4px 15px rgba(247, 198, 0, 0.2);
                    }
                `;
                document.head.appendChild(style);
            }
            
            // Store current selection data
            window.currentSpiceSelection = { 
                productName, 
                basePrice, 
                orderType 
            };
            
            // Populate options based on product type
            populateSpiceOptions(productName, basePrice);
            
            modal.style.display = 'flex';
        }

        // Populate spice options based on product type
        function populateSpiceOptions(productName, basePrice) {
            const container = document.getElementById('spice-options-container');
            const modalTitle = document.getElementById('modal-title');
            const modalDescription = document.getElementById('modal-description');
            const modalTips = document.getElementById('modal-tips');
            
            if (productName === 'Tahu Walik') {
                // Single Tahu Walik options
                modalTitle.textContent = '🌶️ Pilih Level Kepedasan';
                modalDescription.textContent = 'Pilih level kepedasan TAWALET sesuai selera Anda!';
                modalTips.textContent = '💡 Tips: Mulai dari Original jika baru pertama kali mencoba!';
                
                container.innerHTML = `
                    <div onclick="selectSpiceLevel('Original', 0)" class="spice-option" style="border: 2px solid #e5e5e5; border-radius: 12px; padding: 20px; cursor: pointer; transition: all 0.3s ease; display: flex; align-items: center; gap: 15px;">
                        <div style="font-size: 32px;">😋</div>
                        <div style="flex: 1;">
                            <h4 style="font-size: 18px; font-weight: bold; margin-bottom: 5px; color: var(--burgundy);">TAWALET Original</h4>
                            <p style="color: var(--muted); font-size: 14px; margin-bottom: 8px;">Pedas ringan, cocok untuk pemula</p>
                            <p style="font-weight: bold; color: #10b981;">Rp 5.000</p>
                        </div>
                        <div style="color: #10b981; font-size: 20px;">⭐</div>
                    </div>
                    <div onclick="selectSpiceLevel('Pedas', 1000)" class="spice-option" style="border: 2px solid #e5e5e5; border-radius: 12px; padding: 20px; cursor: pointer; transition: all 0.3s ease; display: flex; align-items: center; gap: 15px;">
                        <div style="font-size: 32px;">🔥</div>
                        <div style="flex: 1;">
                            <h4 style="font-size: 18px; font-weight: bold; margin-bottom: 5px; color: var(--burgundy);">TAWALET Pedas</h4>
                            <p style="color: var(--muted); font-size: 14px; margin-bottom: 8px;">Pedas sedang, untuk yang suka tantangan</p>
                            <p style="font-weight: bold; color: #f59e0b;">Rp 6.000</p>
                        </div>
                        <div style="color: #f59e0b; font-size: 20px;">⭐⭐</div>
                    </div>
                    <div onclick="selectSpiceLevel('Pedas Gila', 2000)" class="spice-option" style="border: 2px solid #e5e5e5; border-radius: 12px; padding: 20px; cursor: pointer; transition: all 0.3s ease; display: flex; align-items: center; gap: 15px;">
                        <div style="font-size: 32px;">💀</div>
                        <div style="flex: 1;">
                            <h4 style="font-size: 18px; font-weight: bold; margin-bottom: 5px; color: var(--burgundy);">TAWALET Pedas Gila</h4>
                            <p style="color: var(--muted); font-size: 14px; margin-bottom: 8px;">Pedas ekstrem! Hanya untuk yang berani</p>
                            <p style="font-weight: bold; color: #dc2626;">Rp 7.000</p>
                        </div>
                        <div style="color: #dc2626; font-size: 20px;">⭐⭐⭐</div>
                    </div>
                `;
            } else if (productName === 'Paket Promo') {
                // Paket Promo options
                modalTitle.textContent = '🎉 Pilih Varian Paket Promo';
                modalDescription.textContent = 'Pilih kombinasi level kepedasan untuk 4 cup TAWALET + 1 es teh manis!';
                modalTips.textContent = '💡 Tips: Paket Mix cocok untuk berbagi dengan teman yang punya selera pedas berbeda!';
                
                container.innerHTML = `
                    <div onclick="selectSpiceLevel('Original', 0)" class="spice-option" style="border: 2px solid #e5e5e5; border-radius: 12px; padding: 20px; cursor: pointer; transition: all 0.3s ease; display: flex; align-items: center; gap: 15px;">
                        <div style="font-size: 32px;">😋</div>
                        <div style="flex: 1;">
                            <h4 style="font-size: 18px; font-weight: bold; margin-bottom: 5px; color: var(--burgundy);">Paket Original</h4>
                            <p style="color: var(--muted); font-size: 14px; margin-bottom: 8px;">4 cup TAWALET Original + 1 es teh manis</p>
                            <p style="font-weight: bold; color: #10b981;">Rp 24.000</p>
                        </div>
                        <div style="color: #10b981; font-size: 20px;">⭐</div>
                    </div>
                    <div onclick="selectSpiceLevel('Pedas', 4000)" class="spice-option" style="border: 2px solid #e5e5e5; border-radius: 12px; padding: 20px; cursor: pointer; transition: all 0.3s ease; display: flex; align-items: center; gap: 15px;">
                        <div style="font-size: 32px;">🔥</div>
                        <div style="flex: 1;">
                            <h4 style="font-size: 18px; font-weight: bold; margin-bottom: 5px; color: var(--burgundy);">Paket Pedas</h4>
                            <p style="color: var(--muted); font-size: 14px; margin-bottom: 8px;">4 cup TAWALET Pedas + 1 es teh manis</p>
                            <p style="font-weight: bold; color: #f59e0b;">Rp 28.000</p>
                        </div>
                        <div style="color: #f59e0b; font-size: 20px;">⭐⭐</div>
                    </div>
                    <div onclick="selectSpiceLevel('Pedas Gila', 8000)" class="spice-option" style="border: 2px solid #e5e5e5; border-radius: 12px; padding: 20px; cursor: pointer; transition: all 0.3s ease; display: flex; align-items: center; gap: 15px;">
                        <div style="font-size: 32px;">💀</div>
                        <div style="flex: 1;">
